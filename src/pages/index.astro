---
import Layout from '../layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import Events from '@components/sections/Events.astro';
import Stores from '@components/sections/Stores.astro';
import { stores } from 'src/data/stores.js';
import Nosotros from '@components/sections/Nosotros.astro';
---

<Layout title='Inicio | Plaza La Nogalera'>
  <main>
    <Hero />

    <Events
      class='relative pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-40 lg:pb-28'
      title='Eventos'
      buttonLink='/eventos'
      buttonText='Ver Eventos'
    />

    <Stores
      title='Nuestras Tiendas'
      stores={stores}
      class='pt-16 pb-12 md:pt-32 md:pb-16 lg:pt-24 lg:pb-24'
      buttonLink='/directorio'
      buttonText='Ver Tiendas'
    />

    <Nosotros class='py-12 md:py-16 lg:py-28' />
  </main>
</Layout>
